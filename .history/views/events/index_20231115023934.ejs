<h2>Events Table</h2>
<a href="/events/new">Create an Event</a>
</br>
</br>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Location</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Is Online</th>
      <th>Registration Link</th>
      <th>Organizer</th>
      <th>Attendees</th>
    </tr>
  </thead>
  <tbody>
    <% events.forEach(event => { %>
    <tr>
      <td>
        <a href="<%= `/events/${event._id}` %>"> <%= event.title %> </a>
      </td>
      <td><%= event.description %></td>
      <td><%= event.location %></td>
      <td><%= event.startDate %></td>
      <td><%= event.endDate %></td>
      <td><%= event.isOnline %></td>
      <td><%= event.registrationLink %></td>
      <td><%= event.organizer %></td>
      <td><%= event.attendees %></td>
      <td>
        <a href="<%=`/events/${event._id}/edit` %>"> Edit </a>
      </td>
      <td>
        <a
          href="<%= `/events/${event._id}/delete?_method=DELETE` %>"
          onclick="return confirm('Are you sure you want to delete this record?')"
          >Delete</a
        >
      </td>
      <% if (currentUser) { %>
        <%= let userId = currentUser._id %>
      <%} else { %>
        <% let userId = '' %>
        <%}%>
      <td>
        <a href="<%= `/events/${event._id}/${userId}/attend` %>">Attend</a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
